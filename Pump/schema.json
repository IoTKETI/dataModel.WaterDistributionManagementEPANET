{
    "$schema": "http://json-schema.org/schema#",
    "schemaVersion": "0.0",
    "$id": "https://smart-data-models.github.io/data-models/specs/WaterNetwork/Pump/schema.json",
    "title": "WaterNetwork - Pump",
    "description": "This entity contains a harmonised description of a generic pump made for the Water Network Management domain. This entity is primarily associated with the water management vertical and related IoT applications.",
    "type": "object",
    "allOf": [
        {
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "Pump"
                    ],
                    "description": "NGSI-LD Entity Type"
                },
                "tag": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/tag"
                },
                "description": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/description"
                },
                "status": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/status"
                },
                "initialStatus": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/initialStatus"
                },
                "power": {
                    "type": "number",
                    "description": "NGSI-LD Entity Type"
                },
                "speed": {
                    "type": "number",
                    "description": "NGSI-LD Entity Type"
                },
                "startsAt": {
                    "type": "object",
                    "format": "uri",
                    "description": "NGSI-LD Entity Type"
                },
                "endsAt": {
                    "type": "object",
                    "format": "uri",
                    "description": "NGSI-LD Entity Type"
                },
                "vertices": {
                    "description": "Coordinates of all vertices in the pump, ordered from the startsAt node to the endsAt node and encoded as a GeoJSON ",
                    "oneOf": [
                        {
                            "$ref": "https://geojson.org/schema/MultiPoint.json"
                        },
                        {
                            "$ref": "https://geojson.org/schema/Point.json"
                        }
                    ]
                },
                "headCurve": {
                    "type": "object",
                    "format": "uri",
                    "description": "The ID label of the pump curve used to describe the relationship between the head delivered by the pump and the flow through the pump"
                },
                "pumpPattern": {
                    "type": "object",
                    "format": "uri",
                    "description": "The ID label of a time pattern used to control the pump's operation. The multipliers of the pattern are equivalent to speed settings. A multiplier of zero implies that the pump will be shut off during the corresponding time period"
                },
                "efficCurve": {
                    "type": "object",
                    "format": "uri",
                    "description": "The ID label of the curve that represents the pump's wire-to-water efficiency as a function of flow rate"
                },
                "energyPrice": {
                    "type": "number",
                    "description": " The average or nominal price of energy in monetary units per kw-hr"
                },
                "energyPattern": {
                    "type": "object",
                    "format": "uri",
                    "description": "The ID label of the time pattern used to describe the variation in energy price throughout the day"
                }
            }
        }
    ],
    "required": [
        "id",
        "type",
        "initialStatus",
        "startsAt",
        "endsAt"
    ]
}