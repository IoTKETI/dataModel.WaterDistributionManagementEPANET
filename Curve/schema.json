{
    "$schema": "http://json-schema.org/schema#",
    "schemaVersion": "0.0",
    "$id": "https://smart-data-models.github.io/dataModel.WaterNetworkManagement/Curve/schema.json",
    "title": "WaterNetwork - Curve",
    "description": "This entity contains a harmonised description of a generic curve made for the Water Network Management domain. This entity is primarily associated with the water management vertical and related IoT applications.",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "description": "Property. NGSI-LD Entity Type. It must be equal to Curve.",
            "enum": [
                "Curve"
            ]
        },
        "tag": {
            "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/tag"
        },
        "description": {
            "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/description"
        },
        "curveType": {
            "type": "string",
            "enum": [
                "FLOW-HEAD",
                "FLOW-EFFICIENCY",
                "FLOW-HEADLOSS",
                "LEVEL-VOLUME"
            ],
            "description": "Entity's curve type."
        },
        "xData": {
            "type": "array",
            "description": "Property. X data points for the curve",
            "items": {
                "type": "number"
            }
        },
        "yData": {
            "type": "array",
            "description": "Property. Y data points for the curve",
            "items": {
                "type": "number"
            }
        }
    },
    "required": [
        "id",
        "type",
        "curveType",
        "xData",
        "yData"
    ]
}