{
    "$schema": "http://json-schema.org/schema#",
    "schemaVersion": "0.0",
    "$id": "https://smart-data-models.github.io/data-models/specs/WaterNetwork/Tank/schema.json",
    "title": "WaterNetwork - Tank",
    "description": "This entity contains a harmonised description of a generic tank made for the Water Network Management domain. This entity is primarily associated with the water management vertical and related IoT applications.",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
        },
        {
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "Tank"
                    ],
                    "description": "NGSI-LD Entity Type"
                },
                "tag": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/tag"
                },
                "description": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/description"
                },
                "elevation": {
                    "type": "number",
                    "description": "The elevation above some common reference of the tank"
                },
                "initLevel": {
                    "type": "number",
                    "description": "The height of the water surface above the bottom elevation of the tank at the start of the simulation"
                },
                "minLevel": {
                    "type": "number",
                    "description": "The minimum level that water in the tank can drop to"
                },
                "maxLevel": {
                    "type": "number",
                    "description": "The height of the water surface above the bottom elevation of the tank at the start of the simulation"
                },
                "minVolume": {
                    "type": "number",
                    "description": "The volume of water in the tank when it is at its minimum level"
                },
                "nominalDiameter": {
                    "type": "number",
                    "description": "The diameter of the tank"
                },
                "initialQuality": {
                    "type": "number",
                    "description": "Water quality level in the tank at the start of the simulation"
                },
                "bulkReactionCoefficient": {
                    "type": "number",
                    "description": "The bulk reaction coefficient used for modelling reactions in the tank."
                },
                "mixingModel": {
                    "type": "string",
                    "enum": [
                        "MIXED",
                        "2COMP",
                        "FIFO",
                        "LIFO"
                    ],
                    "description": "A sub-property of the Property sourceCategory"
                },
                "sourceCategory": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/sourceCategory"
                },
                "volumeCurve": {
                    "type": "object",
                    "format": "uri",
                    "description": "The ID label of a curve used to describe the relation between tank volume and water level"
                },
                "mixingFraction": {
                    "type": "number",
                    "description": "NGSI-LD Entity Type"
                },
                "hasInlet": {
                    "type": "object",
                    "format": "uri",
                    "description": " A relationship indicating the water inlet points of the Reservoir"
                },
                "hasOutlet": {
                    "type": "object",
                    "format": "uri",
                    "description": " A relationship indicating the water outlet points of the Reservoir"
                }
            }
        }
    ],
    "required": [
        "id",
        "type",
        "location",
        "elevation",
        "initLevel",
        "maxLevel",
        "minVolume",
        "nominalDiameter"
    ]
}