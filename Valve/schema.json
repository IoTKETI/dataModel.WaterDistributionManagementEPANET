{
    "$schema": "http://json-schema.org/schema#",
    "schemaVersion": "0.0",
    "$id": "https://smart-data-models.github.io/data-models/specs/WaterNetwork/Valve/schema.json",
    "title": "WaterNetwork - Valve",
    "description": "This entity contains a harmonised description of a generic Valve made for the Water Network Management domain. This entity is primarily associated with the water management vertical and related IoT applications.",
    "type": "object",
    "allOf": [
        {
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "Valve"
                    ],
                    "description": "NGSI-LD Entity Type"
                },
                "tag": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/tag"
                },
                "description": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/description"
                },
                "status": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/status"
                },
                "initialStatus": {
                    "$ref": "https://raw.githubusercontent.com/smart-data-models/dataModel.WaterNetworkManagement/master/WaterNetworkManagement-schema.json#/definitions/initialStatus"
                },
                "diameter": {
                    "type": "number",
                    "description": "NGSI-LD Entity Type"
                },
                "valveType": {
                    "type": "string",
                    "enum": [
                        "PRV",
                        "PSV",
                        "PBV",
                        "FCV",
                        "TCV",
                        "GPV"
                    ],
                    "description": "The valve type"
                },
                "setting": {
                    "type": "number",
                    "description": "A parameter that describes the valve's operational setting"
                },
                "minorLoss": {
                    "type": "number",
                    "description": "Unitless minor loss coefficient that applies when the valve is completely opened"
                },
                "startsAt": {
                    "type": "object",
                    "format": "uri",
                    "description": " The ID of the node on the nominal upstream or inflow side of the valve"
                },
                "endsAt": {
                    "type": "object",
                    "format": "uri",
                    "description": "The ID of the node on the nominal downstream or discharge side of the valve"
                },
                "valveCurve": {
                    "type": "object",
                    "format": "uri",
                    "description": "A relationship to the curve of the setting property. Only required when valveType is GPV"
                },
                "vertices": {
                    "oneOf": [
                        {
                            "$ref": "http://geojson.org/schema/MultiPoint.json"
                        },
                        {
                            "$ref": "http://geojson.org/schema/Point.json"
                        }
                    ],
                    "description": "Coordinates of all vertices in the valve, ordered from the startsAt node to the endsAt node and encoded as a GeoJSON "
                }
            }
        }
    ],
    "required": [
        "id",
        "type",
        "initialStatus",
        "diameter",
        "valveType",
        "setting",
        "minorLoss",
        "startsAt",
        "endsAt"
    ]
}