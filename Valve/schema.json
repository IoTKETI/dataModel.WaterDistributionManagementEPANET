                },
                "vertices": {
                    "oneOf": [
                        {
                            "$ref": "http://geojson.org/schema/Geometry.json#MultiPoint"
                        },
                        {
                            "$ref": "http://geojson.org/schema/Geometry.json#Point"
                        }
                    ]                    
